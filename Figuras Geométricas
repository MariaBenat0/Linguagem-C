#include <stdio.h>

int main() {

  int numlados, num2, resultado ;

    printf("FIGURAS GEOMETRICAS\n");
    printf("Insira numero de lados: ");
    scanf("%d", &numlados);

    switch(numlados){
    case 1 && 2 :
        printf("Numero de lados invalidos!");
        break;

    case 3:
        printf("Classificacao: Triangulo.");
        break;

    case 4 :
        printf("Classificacao: Quadrado.");
        break;

    case 5 :
        printf("Classificacao: Pentagono. ");
        break;

    case 6 :
        printf("Classificacao: Hexagono. ");
        break;

    default:
        printf("Figura geometrica invalida.");
}

    return 0;
}
